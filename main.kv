WindowManager:
    LogInScreen:
    MenuScreen:
    DriverScreen:
    RiderScreen:
    ProfileScreen:
    RiderProfileScreen:
    EditProfileScreen:
    Default:

<LogInScreen>:
    name:"logIn"
    user:user
    password:password
    BoxLayout:

        size_hint:None,None
        size:230,300
        pos_hint:{"center_x":0.5,"center_y":0.5}
        elevation:10
        padding:25
        spacing:25

        orientation:"vertical"

        Label:
            id:bienvenida_label
            text: "INICIAR SESION"
            halign:"center"
            font_size:20
            size_hint_y:None
            height:self.texture_size[1]

        TextInput:
            id:user
            multiline: False
            hint_text:"Usuario"
            icon_right:"account"
            helper_text: "olvidaste el usuario?"
            helper_text_mode: "on_focus"
            pos_hint:{"center_x":0.5}
            size_hint_x:None
            width:150

        TextInput:
            id:password
            multiline: False
            hint_text:"Contraseña"
            helper_text: "olvidaste la contraseña?"
            icon_right:"eye-off"
            helper_text_mode: "on_focus"
            pos_hint:{"center_x":0.5,"center_y":0.3}
            size_hint_x:None

        Button:
            text: "Salir"
            pos_hint:{"center_x":0.2,"center_y":0.3}
            on_press:root.manager.current="default"
            font_size:15
            pos_hint:{"center_x":0.5}

        Button:
            id:ingresar
            text: "ingresar"
            pos_hint:{"center_x":0.9,"center_y":0.2}
            on_press:
                root.login()
            pos_hint:{"center_x":0.5}

            font_size:15
